@using Exercise5.Models
@using Exercise5.ViewModels
@model Exercise5.ViewModels.ComponentTypeEditViewModel
@{ 
  ViewBag.Title = "Create component type";
}

<h1>@ViewBag.Title</h1>

@using (Html.BeginForm()) 
{
  <div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.ComponentName, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.ComponentName, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.ComponentName)
      </div>

      @Html.LabelFor(m => m.ComponentInfo, new {@class="control-label"})
      <div> 
        @Html.TextAreaFor(m => m.ComponentInfo, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.ComponentInfo)
      </div>

      @Html.LabelFor(m => m.Status, new {@class="control-label"})
      <div> 
        <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(ComponentStatus))"> 
        </select>
      @Html.ValidationMessageFor(m => m.Status)
    </div>

      @Html.LabelFor(m => m.DataSheet, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.DataSheet, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.DataSheet)
      </div>

      @Html.LabelFor(m => m.ImageUrl, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.ImageUrl, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.ImageUrl)
      </div>

      @Html.LabelFor(m => m.Manufacturer, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.Manufacturer, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.Manufacturer)
      </div>

      @Html.LabelFor(m => m.WikiLink, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.WikiLink, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.WikiLink)
      </div>

      @Html.LabelFor(m => m.AdminComment, new {@class="control-label"})
      <div> 
        @Html.EditorFor(m => m.AdminComment, new {@class="form-control"}) 
        @Html.ValidationMessageFor(m => m.AdminComment)
      </div>
      <label asp-for="Categories" class="control-label" > </label>
      <div>
        <select asp-for="CategorieIds" class="form-control" asp-items="@Model.Categories" multiple="multiple"> 
        </select>
      </div>
    </div>

    
    <div class="form-group">
      <input class="btn btn-primary" type="submit" value="Save component type" />
    </div>
  </div>
}