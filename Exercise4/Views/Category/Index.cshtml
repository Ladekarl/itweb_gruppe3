@model Exercise4.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Component categories";
}
<h1>@ViewBag.Title</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-md-8">Name</th>
            <th class="col-md-2">Edit</th>
            <th class="col-md-2">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Name</td>
                <td><a class="btn btn-primary" asp-action="Edit" asp-route-id="@category.CategoryId"><span class="glyphicon glyphicon-pencil"/></a></td>
                <td><a class="btn btn-primary" asp-action=""><span class="glyphicon glyphicon-remove"/></a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div> 